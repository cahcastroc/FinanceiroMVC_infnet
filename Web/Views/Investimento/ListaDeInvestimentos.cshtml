
@model List<Financeiro.Domain.Entities.TipoInvestimentos>
@{
}

<h2>Lista de Investimentos</h2>
<h2>Selecione os investimentos desejados:</h2>

@using(Html.BeginForm("selecionar", "investimento", FormMethod.Post))
{

<table class="table table-bordered">
    <thead>
        <tr>
            <td>#</td>
            <td>Descrição</td>
            <td>Status</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        
        {
        <tr>
            <td><input type ="checkbox" name="Selected" value="@item.Id"/></td>
            <td>@item.Descricao</td>
            <td>@item.Active</td>
        </tr>    
        
        }
    </tbody>
</table>
    <button type="submit">
        Enviar selecionados
    </button>

}

